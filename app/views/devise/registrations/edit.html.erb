<h2 align="center">Editar <%= resource_name.to_s.humanize %></h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="panel panel-default">
  <form class="form-horizontal form-border no-margin" id="type-constraint" data-validate="parsley" novalidate="">
    <div class="panel-body">
      <!--Nombre del servicio-->
      <div class="form-group">
        <%= f.label :Correo_electronico , :class => "control-label col-lg-3" %><br />
        <div class="col-lg-9">
           <%= f.email_field :email, autofocus: true %>
           <div class="seperator"></div>
        </div>
      </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
        <%= f.label :Contraseña, :class => "control-label col-lg-3" %> 
          <div class="col-lg-9">
            <%= f.password_field :password, autocomplete: "off" %>
            <div class="seperator"></div>
          </div>
        </div> 

        <div class="form-group">
        <%= f.label :Confirmar_contraseña, :class => "control-label col-lg-3" %><br />
           <div class="col-lg-9">
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
              <div class="seperator"></div>
          </div>              
        </div> 

        <div class="form-group">
        <%= f.label :Contraseña_anterior, :class => "control-label col-lg-3" %> 
           <div class="col-lg-9">        
              <%= f.password_field :current_password, autocomplete: "off" %>
              <div class="seperator"></div>
          </div>
        </div>



        <div  align="center">
          <%= link_to "Volver", :back, :class => "btn btn-warning" %>
          <%= f.submit "Aceptar" , :class => "btn btn-success" %>
        </div>

      <% end %>
      
      <h3>Cancelar mi cuenta</h3>

      <p>No está conforme? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete %></p>

  </div>



</div>
