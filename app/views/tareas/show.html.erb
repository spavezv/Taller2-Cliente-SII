
<h1 align="center" style="position:relative ;left:-100px"> Tarea</h1>
<%= form_for(@tarea, html: {class:"form-horizontal form-border no-margin"}) do |f| %>
  <% if @tarea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tarea.errors.count, "error") %> prohibited this tarea from being saved:</h2>

      <ul>
      <% @tarea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>   

   <div class="col-md-12 col-sm-12">
            <div class="tab-content">
              <div class="tab-pane fade in active" id="overview">
                <div class="row">
                  <div class="col-md-12">
                    <div class="panel panel-default fadeInDown animation-delay2">
                      <div class="panel-heading">
                       <strong class="font-14"> Datos de la tarea: </strong>
                      </div>
                      <div class="panel-body">
                        <td>Nombre: <%= @tarea.nombre %></td><br>
                        <td>Estado: <%= @tarea.estado %></td><br>
                        <td>Fecha de creación: <%= @tarea.creacion %></td><br>
                        <td>Fecha de término: <%= @tarea.termino %></td><br>
                        <td>Descripción: <%= @tarea.descripcion %></td><br>
                        <% if @ejecutante.nil? %>
                        <td>Ejecutante: No asignado</td><br>
                        <% else %>
                        <td>Ejecutante: <%= @ejecutante.nombre %></td><br>
                        <% end %>
                        </div>
                    </div><!-- /panel -->
                    <div align="left" >
                      <a href="/servicios/<%= @tarea.servicio_id%>" class="btn btn-warning">
                       <i class="fa fa-chevron-left"></i>Volver</a>  
                      </div>  
                  </div>
                </div>
              </div>
            </div>
          </div>
</div><!-- /.row -->


 



<% end %>