<%= form_for(@company) do |f| %>
<% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> No se puede almacenar:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<div class="panel panel-default">
              <form class="form-horizontal form-border no-margin" id="type-constraint" data-validate="parsley" novalidate="">
                <div class="panel-heading">
                  Ingresar empresa
                </div>
                <div class="panel-body">
                  <div class="form-group">
                    <label for="company_nombre_fantasia" class="control-label col-lg-3">Nombre de fantasía</label>
                    <div class="col-lg-9">
                      <input type="text" class="form-control input-sm" data-required="true" placeholder="Nombre de fantasía" id="company_nombre_fantasia" name="company[nombre_fantasia]">
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                  <div class="form-group">
                    <label class="control-label col-lg-3">Nombre comercial</label>
                    <div class="col-lg-9">
                      <input type="text" class="form-control input-sm" data-required="true" placeholder="Nombre comercial" id="company_nombre_comercial" name="company[nombre_comercial]">
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                  <div class="form-group">
                    <label class="control-label col-lg-3">Email</label>
                    <div class="col-lg-9">
                      <input type="text" class="form-control input-sm" data-type="email" placeholder="Email" id="company_email" name="company[email]">
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                  <div class="form-group">
                    <label class="control-label col-lg-3">Página web</label>
                    <div class="col-lg-9">
                      <input type="text" class="form-control input-sm" data-type="url" placeholder="Url" id="company_web" name="company[web]">
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                <div class="form-group">
                    <label class="control-label col-lg-3">Teléfono</label>
                    <div class="col-lg-9">
                      <input type="text" class="form-control input-sm" data-type="digits" placeholder="Teléfono" id="company_telefono" name="company[telefono]">
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                  <div class="form-group">
                    <label class="control-label col-lg-3">Dirección</label>
                    <div class="col-lg-9">
                    <input type="text" class="form-control input-sm" placeholder="Dirección" id="company_direccion" name="company[direccion]">
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                  <div class="form-group">
                    <label class="control-label col-lg-3">Región</label>
                    <div class="col-lg-9">
                    <select type="text" class="form-control chzn-select" id="company_region" name="company[region]">
                      <option>XV - Arica y Parinacota</option>
                      <option>I - Tarapacá</option>
                      <option>II - Antofagasta</option>
                      <option>III - Atacama</option>
                      <option>IV - Coquimbo</option>
                      <option>V - Valparaíso</option>
                      <option>VI - O'Higgins</option>
                      <option>VII - Maule</option>
                      <option>VIII - BioBió</option>
                      <option>IX - Araucanía</option>
                      <option>XIV - Los Ríos</option>
                      <option>X - Los Lagos</option>
                      <option>XI - Aysén</option>
                      <option>XII - Magallanes</option>
                      <option>RM - Metropolitana</option>
                    </select>
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                  <div class="form-group">
                    <label class="control-label col-lg-3">Representante</label>
                    <div class="col-lg-9">
                      <input type="text" class="form-control input-sm" data-required="true" placeholder="Representante" id="company_representante" name="company[representante]">
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                  <div class="form-group">
                    <label class="control-label col-lg-3">Giro</label>
                    <div class="col-lg-9">
                    <select type="text" class="form-control chzn-select" id="company_giro" name="company[giro]">
                      <option>Agricultura, ganadería, caza y silvicultura</option>
                      <option>Pesca</option>
                      <option>Explotación de minas y canteras</option>
                      <option>Industrias manufactureras no metálicas</option>
                      <option>Industrias manufactureras metálicas</option>
                      <option>Suministro de electricidad, gas y agua</option>
                      <option>Construcción</option>
                      <option>Comercio al por mayor y menor; rep. Veh.automotores/enseres domésticos</option>
                      <option>Hoteles y restaurantes</option>
                      <option>Transporte, almacenamiento y comunicaciones</option>
                      <option>Intermediación financiera</option>
                      <option>Actividades inmobiliarias, empresariales y de alquiler</option>
                      <option>Adm. Pública y defensa; planes de seg. Social afiliación obligatoria</option>
                      <option>Enseñanza</option>
                      <option>Servicios sociales y de salud</option>
                      <option>Otras actividades de servicios comunitarias, sociales y personales</option>
                    </select>
                      <div class="seperator"></div>
                    </div><!-- /.col -->
                  </div><!-- /form-group -->
                  </div><!-- /panel-body -->
                </div><!-- /panel-heading -->
                <button name="commit" class="btn btn-success" type="submit">Crear empresa</button>
              </form>
            </div>
<% end %>


